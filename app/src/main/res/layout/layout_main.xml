<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/welcome2_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen200"
        android:background="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen50"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="@dimen/dimen120"
            >

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D7722C"
        app:layout_constraintTop_toBottomOf="@id/welcome2_layout"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen50"
            android:background="@drawable/welcome2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="@dimen/dimen120"
            >

            <TextView
                android:id="@+id/welcome2_atas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome1"
                android:textSize="30sp"
                android:fontFamily="@font/quicksandbold"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingBottom="@dimen/dimen20"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome2"
                app:layout_constraintTop_toBottomOf="@id/welcome2_atas"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/quicksandregular"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>